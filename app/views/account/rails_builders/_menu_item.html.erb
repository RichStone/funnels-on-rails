<% if can? :read, RailsBuilder.new(team: current_team) %>
  <%= render 'account/shared/menu/item', {
    url: main_app.polymorphic_path([:account, current_team, :rails_builders]),
    label: t('rails_builders.navigation.label'),
  } do |p| %>
    <% p.icon do %>
      <i class="<%= t('rails_builders.navigation.icon') %>"></i>
    <% end %>
  <% end %>
<% end %>

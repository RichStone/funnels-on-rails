<!DOCTYPE html>
<html class="theme-<%= BulletTrain::Themes::Light.color %> <%= "theme-secondary-#{BulletTrain::Themes::Light.secondary_color}" if BulletTrain::Themes::Light.secondary_color %>" lang="<%= I18n.locale %>">
  <head>
    <%= render 'shared/layouts/head' %>
  </head>
  <body class="min-h-screen bg-slate-50 dark:bg-slate-900 text-slate-700 text-sm font-normal dark:text-slate-300">
    <div class="p-4 bg-primary-900 electron-draggable electron-title-bar hidden electron-mobile-only"></div>
    <div class="main-container-padding">
      <div class="min-h-screen flex main-container"
        data-controller="mobile-menu"
        data-mobile-menu-hidden-class="hidden"
      >
        <%= render "account/shared/menu/mobile" %>

        <% if BulletTrain::Themes::Light.navigation == :left %>
          <div class="hidden lg:flex lg:flex-shrink-0 bg-gradient-to-b from-primary-700 to-primary-800 dark:from-slate-800 dark:to-slate-800">
            <div class="w-64">
              <%= render "account/shared/menu/sidebar" %>
            </div>
          </div>
        <% end %>

        <div class="flex flex-col w-0 flex-1 bg-slate-50 dark:bg-slate-900 dark:border-slate-500 <%= BulletTrain::Themes::Light.navigation == :left ? "lg:border-l" : "" %>">

          <% if BulletTrain::Themes::Light.navigation == :top %>
            <div class="hidden lg:flex bg-gradient-to-r from-primary-700 to-primary-600 dark:from-slate-700/50 dark:to-slate-800">
              <%= render "account/shared/menu/top" %>
            </div>
          <% end %>

          <main class="flex-1 relative z-0 focus:outline-none" tabindex="0">
            <div class="flex flex-row items-center border-b border-slate-200 dark:border-slate-700 electron-draggable">
              <%= render "account/shared/menu/open" %>

              <nav class="flex overflow-auto px-1 lg:px-4 py-2 select-none" aria-label="Breadcrumb">
                <ol class="breadcrumb whitespace-nowrap flex items-center space-x-3 py-0.5 pr-3">
                  <%= render('breadcrumbs').strip.html_safe %>
                </ol>
              </nav>
            </div>

            <div class="py-6 px-4 sm:px-6 lg:px-8">
              <div class="max-w-4xl mx-auto">
                <%= yield %>
              </div>
            </div>
          </main>
        </div>
      </div>
    </div>
  </body>
</html>
